@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Slider</title>
    <style>
        /* Genel ayarlar */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-image: url('/images/dresim.jpg'); /* Arka plan resmi ekleyin */
            background-size: cover; /* Resmin tüm alanı kaplamasını sağlar */
            background-position: center; /* Resmin merkezde görünmesini sağlar */
            background-attachment: fixed; /* Sayfa kaydırıldığında arka planın sabit kalmasını sağlar */
            color: #fff; /* Arka planla kontrast oluşturacak metin rengi */
        }

        .text-center {
            text-align: center;
            margin-bottom: 20px;
            position: relative; /* Başlığın arka planın üstünde yer almasını sağlar */
            z-index: 1; /* Başlık diğer öğelerin üstünde olmalı */
        }

        /* Slider kapsayıcı */
        .slider-container {
            position: relative;
            width: 80%;
            height: 400px;
            margin: 0 auto;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

        /* Slider içeriği */
        .slider {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

        /* Her bir slide */
        .slide {
            min-width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .slide img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Önceki ve sonraki butonlar */
        .slider-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            z-index: 10;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        .slider-btn:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }

        /* Hoş geldiniz mesajı */
        h1 {
            font-size: 3rem;
            color: #e91e63;
            font-family: 'Cursive', sans-serif;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.25rem;
            color: #7b3f6f;
        }

        a {
            color: #e91e63;
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="text-center">
        <h1>Welcome to Rumi's Beauty Center</h1>
        <p>Explore the world of beauty and wellness at <a href="https://docs.microsoft.com/aspnet/core">Rumi's Beauty Center</a>.</p>
    </div>

    <!-- Slider Container -->
    <div class="slider-container">
        <div class="slider">
            <div class="slide"><img src="/images/aresim.png" alt="Slide 1"></div>
            <div class="slide"><img src="/images/bresim.png" alt="Slide 2"></div>
            <div class="slide"><img src="/images/cresim.png" alt="Slide 3"></div>
        </div>
        <button class="slider-btn prev">❮</button>
        <button class="slider-btn next">❯</button>
    </div>

    <script>
        // Slider fonksiyonları
        const slider = document.querySelector('.slider');
        const slides = document.querySelectorAll('.slide');
        const prevBtn = document.querySelector('.prev');
        const nextBtn = document.querySelector('.next');

        let currentIndex = 0;

        // Önceki slide'a git
        prevBtn.addEventListener('click', () => {
            currentIndex = (currentIndex === 0) ? slides.length - 1 : currentIndex - 1;
            updateSliderPosition();
        });

        // Sonraki slide'a git
        nextBtn.addEventListener('click', () => {
            currentIndex = (currentIndex === slides.length - 1) ? 0 : currentIndex + 1;
            updateSliderPosition();
        });

        // Slider pozisyonunu güncelle
        function updateSliderPosition() {
            slider.style.transform = `translateX(-${currentIndex * 100}%)`;
        }

        // Otomatik geçiş (isteğe bağlı)
        setInterval(() => {
            currentIndex = (currentIndex === slides.length - 1) ? 0 : currentIndex + 1;
            updateSliderPosition();
        }, 5000); // Her 5 saniyede bir slide değiştir
    </script>
</body>
</html>
